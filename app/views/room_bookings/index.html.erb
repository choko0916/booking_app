<h2>宿泊施設一覧</h2>
<h3>検索結果：　</h3>

<div class="hotels">
  <% @room_registrations.each do |room_registration| %>
    <div class="hotel">
      <div class="id"><%= room_registration.id %></div>
      <div class="room_image"><%= image_tag room_registration.room_image.url %></div>
      <div class="room_name"><%= room_registration.room_name %></div>
      <div class="room_address"><%= room_registration.room_address %></div>
      <div class="room_price">￥<%= room_registration.room_price %></div>
    </div>
  <% end %>
</div>
